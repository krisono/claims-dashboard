// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(ADJUSTER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts         Account[]
  sessions         Session[]
  createdClaims    Claim[]
  claimAssignments ClaimAssignment[]
  activities       Activity[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Claims Management Models
model Claim {
  id              String      @id @default(cuid())
  claimNumber     String      @unique
  title           String
  description     String?     @db.Text
  claimantName    String
  claimantEmail   String?
  claimantPhone   String?
  claimantAddress String?     @db.Text
  
  // Incident details
  incidentDate    DateTime
  incidentType    ClaimType
  incidentDescription String? @db.Text
  
  // Financial
  claimAmount     Decimal     @db.Decimal(10, 2)
  estimatedValue  Decimal?    @db.Decimal(10, 2)
  settledAmount   Decimal?    @db.Decimal(10, 2)
  
  // Status and priority
  status          ClaimStatus @default(SUBMITTED)
  priority        Priority    @default(MEDIUM)
  
  // Fraud detection
  fraudScore      Float?      @default(0)
  fraudFlags      String[]    @default([])
  
  // Workflow
  assignedTo      String?
  assignee        User?       @relation(fields: [assignedTo], references: [id])
  createdBy       String
  creator         User        @relation("CreatedClaims", fields: [createdBy], references: [id])
  
  // Timestamps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  submittedAt     DateTime?
  approvedAt      DateTime?
  settledAt       DateTime?
  
  // Related entities
  assignments     ClaimAssignment[]
  documents       Document[]
  activities      Activity[]
  notes           Note[]
  
  @@map("claims")
}

model ClaimAssignment {
  id        String   @id @default(cuid())
  claimId   String
  userId    String
  assignedAt DateTime @default(now())
  assignedBy String?
  
  claim     Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([claimId, userId])
  @@map("claim_assignments")
}

model Document {
  id          String       @id @default(cuid())
  filename    String
  originalName String
  mimeType    String
  size        Int
  url         String
  description String?
  type        DocumentType @default(OTHER)
  
  claimId     String
  claim       Claim        @relation(fields: [claimId], references: [id], onDelete: Cascade)
  
  uploadedBy  String
  uploadedAt  DateTime     @default(now())
  
  @@map("documents")
}

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  title       String
  description String?      @db.Text
  metadata    Json?
  
  claimId     String
  claim       Claim        @relation(fields: [claimId], references: [id], onDelete: Cascade)
  
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  
  createdAt   DateTime     @default(now())
  
  @@map("activities")
}

model Note {
  id        String   @id @default(cuid())
  content   String   @db.Text
  isInternal Boolean  @default(false)
  
  claimId   String
  claim     Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)
  
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("notes")
}

// Enums
enum UserRole {
  ADMIN
  MANAGER
  ADJUSTER
  INVESTIGATOR
  VIEWER
}

enum ClaimType {
  AUTO_ACCIDENT
  PROPERTY_DAMAGE
  MEDICAL
  THEFT
  FIRE
  FLOOD
  LIABILITY
  WORKERS_COMP
  OTHER
}

enum ClaimStatus {
  SUBMITTED
  UNDER_REVIEW
  PENDING_DOCUMENTS
  INVESTIGATION
  APPROVED
  REJECTED
  SETTLED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum DocumentType {
  POLICE_REPORT
  MEDICAL_RECORD
  PHOTO
  RECEIPT
  ESTIMATE
  INVOICE
  CONTRACT
  CORRESPONDENCE
  OTHER
}

enum ActivityType {
  CREATED
  UPDATED
  STATUS_CHANGED
  ASSIGNED
  DOCUMENT_UPLOADED
  NOTE_ADDED
  APPROVED
  REJECTED
  SETTLED
  INVESTIGATION_STARTED
  FRAUD_DETECTED
  PAYMENT_PROCESSED
}
